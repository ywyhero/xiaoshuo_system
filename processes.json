{
    "apps": [
      {
        "name": "xiaoshuo_system",
        "script": "./app.js",
        "log_date_format": "YYYY-MM-DD HH:mm Z",
        "error_file": "logs/node.stderr.log",
        "out_file": "logs/node.stdout.log",
        "pid_file": "pids/node-geo-api.pid",
        "instances": 6,
        "min_uptime": "200s",
        "max_restarts": 10,
        "max_memory_restart": "1M",
        "cwd": "/var/www/xiaoshuo_system",
        "watch": false,
        "merge_logs": true,
        "exec_interpreter": "node",
        "exec_mode": "fork",
        "autorestart": false,
        "vizion": false
      }
    ]
  }